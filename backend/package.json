{
  "name": "@booksharepdx/backend",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "dev:test": "DATABASE_URL=postgresql://dev:dev@localhost:5433/booksharepdx_test PORT=3002 tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "db:reset-test": "docker exec booksharepdx-test-db psql -U dev -d postgres -c 'DROP DATABASE IF EXISTS booksharepdx_test;' && docker exec booksharepdx-test-db psql -U dev -d postgres -c 'CREATE DATABASE booksharepdx_test;'",
    "typeorm": "typeorm-ts-node-esm",
    "migration:generate": "npm run typeorm -- migration:generate -d src/config/database.ts",
    "migration:run": "npm run typeorm -- migration:run -d src/config/database.ts",
    "test": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@booksharepdx/shared": "*",
    "bcrypt": "^5.1.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "helmet": "^8.0.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.0",
    "pg": "^8.13.1",
    "reflect-metadata": "^0.2.2",
    "resend": "^6.8.0",
    "typeorm": "^0.3.20",
    "uuid": "^11.0.3",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.10.2",
    "@types/uuid": "^10.0.0",
    "@vitest/coverage-v8": "^4.0.16",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3",
    "vitest": "^4.0.16"
  }
}
